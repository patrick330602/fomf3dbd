<FindBugsFilter>

  <!--
    The code generated by slice2java is out of our control, and
    should be filtered from bug detection.
  -->
  <Match> <Package name="omero.api"/> </Match>
  <Match> <Package name="omero.grid"/> </Match>
  <Match> <Package name="omero.model"/> </Match>
  <Match> <Package name="omero.sys"/> </Match>
  <!--
    The omero_client.jar contains all of Ice.jar and
    so those need to be filtered as well.
  -->
  <Match> <Package name="Freeze"/> </Match>
  <Match> <Package name="Glacier2"/> </Match>
  <Match> <Package name="Ice"/> </Match>
  <Match> <Package name="IceBox"/> </Match>
  <Match> <Package name="IceGrid"/> </Match>
  <Match> <Package name="IceInternal"/> </Match>
  <Match> <Package name="IceSSL"/> </Match>
  <Match> <Package name="IceStorm"/> </Match>
  <Match> <Package name="IceUtilInternal"/> </Match>
  
  <!--
    Filter out any Unread Field Bug if the field in the class is called log
  -->
  <Match>
    <Bug pattern="URF_UNREAD_FIELD" />
    <Field name="log" />
  </Match>
</FindBugsFilter>


